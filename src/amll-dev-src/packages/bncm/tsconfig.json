{
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ],
    "exclude": [
        "./node_modules/@types/node/**/*.ts",
    ],
    "compilerOptions": {
        "target": "ESNext",
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable",
            "WebWorker"
        ],
        "module": "ESNext",
        "jsx": "react-jsx",
        "types": [],
        "strict": true,
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": false,
        "skipLibCheck": true,
        "paths": {
          "@applemusic-like-lyrics/core/*": ["../core/src/*"],
          "@applemusic-like-lyrics/react/*": ["../react/src/*"],
          "@applemusic-like-lyrics/bncm/*": ["../bncm/src/*"],
          "@applemusic-like-lyrics/ttml/*": ["../ttml/src/*"],
          "@applemusic-like-lyrics/core": ["../core/src"],
          "@applemusic-like-lyrics/react": ["../react/src"],
          "@applemusic-like-lyrics/bncm": ["../bncm/src"],
          "@applemusic-like-lyrics/ttml": ["../ttml/src"],
        }
    }
}